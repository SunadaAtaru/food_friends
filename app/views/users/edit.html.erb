<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0 fs-4">プロフィール編集</h2>
        </div>
        <div class="card-body p-4">
          <%= form_with(model: @user, local: true) do |f| %>
            <!-- アバター画像フィールド -->
            <div class="mb-3">
              <%= f.label :avatar, 'プロフィール画像', class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control" %>
              <% if @user.avatar? %>
                <div class="mt-2">
                  <p class="mb-1">現在の画像:</p>
                  <%= image_tag @user.avatar.thumb.url, class: "img-thumbnail", style: "max-width: 150px" %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :username, 'ユーザー名', class: "form-label" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :introduction, '自己紹介', class: "form-label" %>
              <%= f.text_area :introduction, rows: 4, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :address, '住所', class: "form-label" %>
              <%= f.text_field :address, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :contact, '連絡先', class: "form-label" %>
              <%= f.text_field :contact, class: "form-control" %>
            </div>

            <div class="mb-4 form-check">
              <%= f.check_box :profile_visibility, class: "form-check-input" %>
              <%= f.label :profile_visibility, 'プロフィールを公開する', class: "form-check-label" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit '更新する', class: 'btn btn-primary' %>
            </div>
            
            <div class="mt-3 text-center">
              <%= link_to '戻る', user_path(@user), class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>