<div class="account-settings-container">
  <h2>アカウント設定</h2>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), method: :put, local: true) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <%# メールアドレス設定 %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <%# パスワード変更 %>
    <div class="form-group">
      <%= f.label :password, "新しいパスワード" %>
      <i>（変更しない場合は空欄）</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%# 現在のパスワード %>
    <div class="form-group">
      <%= f.label :current_password, "現在のパスワード" %>
      <i>（変更を確定するには現在のパスワードが必要です）</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "更新", class: "update-button" %>
    </div>
  <% end %>

  <div class="account-links">
    <%= link_to "プロフィールに戻る", user_path(current_user), class: "back-link" %>
    
    <div class="danger-zone">
      <h3>アカウントの削除</h3>
      <p>
        <%= link_to "アカウントを削除する", registration_path(resource_name), 
          data: { confirm: "本当にアカウントを削除しますか？" }, 
          method: :delete, 
          class: "delete-button" %>

      </p>
    </div>
  </div>
</div>