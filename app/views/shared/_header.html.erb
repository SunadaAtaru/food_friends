<%# app/views/layouts/_header.html.erb %>
<header>
  <nav class="navbar navbar-expand-lg navbar-pink">
    <div class="container">
      <%= link_to "FoodFriends", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <% if current_page?(user_path(current_user)) %>
                <span class="nav-link current-page">プロフィール</span>
              <% else %>
                <%= link_to "プロフィール", user_path(current_user), class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if current_page?(new_food_post_path) %>
                <span class="nav-link current-page">投稿する</span>
              <% else %>
                <%= link_to "投稿する", new_food_post_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <% if current_page?(food_posts_path) %>
                <span class="nav-link current-page">食品一覧</span>
              <% else %>
                <%= link_to "食品一覧", food_posts_path, class: "nav-link" %>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <% if current_page?(new_user_session_path) %>
                <span class="nav-link current-page">ログイン</span>
              <% else %>
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if current_page?(new_user_registration_path) %>
                <span class="nav-link current-page">サインアップ</span>
              <% else %>
                <%= link_to "サインアップ", new_user_registration_path, class: "nav-link" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>